const INTERFACES = `
    bdd
`;

const REPORTERS = `
    doc - html documentation
    dot - dot matrix
    json - single json object
    json-stream - newline delimited json events
    landing - unicode landing strip
    list - spec-style listing
    markdown - markdown documentation (github flavour)
