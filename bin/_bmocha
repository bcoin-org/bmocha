  errorify,
  inspect,
  Mocha,
  style
} = bmocha;

const cwd = process.cwd();
const {argv, env, stdout, stderr, exit} = process;
const on = process.on.bind(process);
const off = process.removeListener.bind(process);

/*
 * Constants
 */

const VERSION = '1.0.1';

